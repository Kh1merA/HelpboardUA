@{
    ViewData["Title"] = "Оформлення доставки";
}

<head>
    <link href="~/css/deliveryPageStyle.css" rel="stylesheet" />
</head>

<div class="wrapper">
    <h2 class = "deliveryText">Доставка гуманітарної допомоги</h2>
    <div class="deliveryContainers">
              <select class = "postChoose">
                 <option value="instruction" selected hidden>Оберіть сервіс доставки</option>
                <option value="NovaPoshta">Нова пошта</option>
              </optgroup>
            </select>
            <div class="deliveryCity">
                <input placeholder="Введіть місто"></input>
            </div>
            <div class="deliveryArea">
                <input placeholder="Введіть область"></input>
            </div>
            <div class="deliveryNums">
                <input placeholder="Введіть номер віділення"></input>
            </div>
            <div class="deliveryTelephone">
                <input placeholder="Введіть номер телефону"></input>
            </div>
        </div>

        <div class="deliveryButton">
            <form action="~/Humanitarian/HumanitarianPage">
                <button>Підтвердити</button> 
            </form>
        </div>
</div>
