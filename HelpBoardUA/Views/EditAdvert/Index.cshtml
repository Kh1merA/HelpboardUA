@model EditAdvertViewModel
@{
    ViewData["Title"] = "Редагувати оголошення";
}

<head>
    <link href="~/css/editAdvertStyle.css" rel="stylesheet" />
</head>

<form asp-action="Edit" method="post">

<div class="wrapper">

    <h1 class="pageTitle">Редагування оголошення</h1>

    @*Блок з контейнером*@

    <div class="mainContainer">

        @*Блок з додаванням зображення*@

        <div class="addNewsImgBlock">
            <h2>Іконка новини:</h2>
            <div class="newsImgBlock">
                <img id="news-icon" src="~/img/editOrderPicture.jpg" alt="newsIcon" />
            </div>
            <div class="downloadAnother">
                <input type="file" accept="image/jpeg, image/png, image/jpg, image/svg" id="upload-file"/>
                @*<button id="upload-btn">Завантажити</button>*@
                @*<img src="~/img/pencilAddNews.png" alt="pencilIcon" />
                <span id="upload-text">Файл не завантажено</span>*@
            </div>
        </div>

        @*Блок бокової лінії*@

        <img src="~/img/addNewsLine.png" alt="newsIcon" class = "lineAddNewsImg"/>

        @*Блок додавання оголошення*@

        <div class="createAddBlock">

            <div class="textAddBlock">

                    <div class="createAddName">
                        <h2 class="createAddNameTitle">Id</h2>
                        <input type="text" asp-for="Id" readonly>
                    </div>

                    <div class="createAddName">
                        <h2 class="createAddNameTitle">Назва</h2>
                        <input type="text" placeholder="Введіть назву" asp-for="Title">
                    </div>

                    <div class="createAddUnderName">
                        <h2 class="createAddUnderNameTitle">Підназва:</h2>
                        <textarea rows="4" cols="50" placeholder="Введіть підназву" asp-for="Subtitle"></textarea>
                    </div>

                    <div class="createAddDescription">
                        <h2 class="createAddDescriptionTitle">Опис:</h2>
                        <textarea rows="4" cols="50" laceholder="Введіть опис" asp-for="Description"></textarea>
                    </div>

            </div>

            <div class="categoryAddBlock">

                <div class="categoriesAddBlock">

                    @*Вибір категорії оголошення*@
                        <div class="addCategoryInputBlock">
                            <h2>Категорія оголошеня:</h2>
                            <select class="addCategorySelectBlock" asp-for="OfferType">
                                <option selected>@Model.OfferType</option>
                                <option value="gumHelp">Гуманітарна допомога</option>
                                <option value="moneyHelp">Виплати</option>
                                <option value="volunteersHelp">Волонтерська діяльність</option>
                            </select>
                        </div>

                    @*Вибір категорії гуманітарної допомоги*@
                        <div class="addGumCategoryInputBlock">
                            <h2>Категорія гуманітарної допомоги:</h2>
                            <select class="addGumCategorySelectBlock" asp-for="HelpType">
                                <option selected>Оберіть категорію</option>
                                <option value="kitchenHelp">Кухонні набори</option>
                                <option value="childrenHelp">Дитячі товари</option>
                                <option value="bedLinen">Постільна білизна</option>
                                <option value="animalsHelp">Набори для тварин</option>
                                <option value="medicalHelp">Лікарські засоби</option>
                                <option value="foodHelp">Продуктові набори</option>
                                <option value="informationHelp">Інформаційні заходи</option>
                                <option value="hygieneHelp">Гігієнічні набори</option>
                                <option value="moneyHelp">Грошові виплати</option>
                            </select>
                        </div>
                    @*Ввід максимальної кількості гуманітарної допомоги*@
                    <div class="maxGumHelpInput">
                        <h2 class="maxGumHelpTitle">Максимальна кількість гуманітарних наборів:</h2>
                        <input asp-for="NumberOfAid" placeholder="Введіть кількість" type="number" value="@Model.NumberOfAid" >
                    </div>
                </div>

                <div class="locationAddBlock">

                    <div class="upListstAddBlock">

                        @*Ввід області*@
                        <div class="areaAddSelectBlock">
                            <h2>Область</h2>
                                <select class="areaAddSelect" asp-for="Area">
                                    <option value="" selected>Оберіть область</option>
                                    <option value="Вінницька область">Вінницька область</option>
                                    <option value="Волинська область">Волинська область</option>
                                    <option value="Дніпротпетровська область">Дніпротпетровська область</option>
                                    <option value="Донецька область">Донецька область</option>
                                    <option value="Житомирська область">Житомирська область</option>
                                    <option value="Закарпатська область">Закарпатська область</option>
                                    <option value="Запорізька область">Запорізька область</option>
                                    <option value="Івано-Франківська область">Івано-Франківська область</option>
                                    <option value="Київська область">Київська область</option>
                                    <option value="Кіровоградська область">Кіровоградська область</option>
                                    <option value="Луганська область">Луганська область</option>
                                    <option value="Львівська область">Львівська область</option>
                                    <option value="Миколаївська область">Миколаївська область</option>
                                    <option value="Одеська область">Одеська область</option>
                                    <option value="Полтавська область">Полтавська область</option>
                                    <option value="Рівненська область">Рівненська область</option>
                                    <option value="Сумська область">Сумська область</option>
                                    <option value="Тернопільська область">Тернопільська область</option>
                                    <option value="Харківська область">Харківська область</option>
                                    <option value="Херсонська область">Херсонська область</option>
                                    <option value="Хмельницька область">Хмельницька область</option>
                                    <option value="Черкаська область">Черкаська область</option>
                                    <option value="Чернівецька область">Чернівецька область</option>
                                    <option value="Чернігівська область">Чернігівська область</option>
                                </select>
                        </div>

                        @*Ввід міста*@
                        <div class="townAddSelectBlock">
                            <h2>Місто</h2>
                                <select class="townAddSelect" asp-for="City">
                                    <option value="" selected>Оберіть місто</option>
                                    <option value="Вінниця">Вінниця</option>
                                    <option value="Дніпро">Дніпро</option>
                                    <option value="Донецьк">Донецьк</option>
                                    <option value="Житомир">Житомир</option>
                                    <option value="Запоріжжя">Запоріжжя</option>
                                    <option value="Івано-Франківськ">Івано-Франківськ</option>
                                    <option value="Київ">Київ</option>
                                    <option value="Кропивницький">Кропивницький</option>
                                    <option value="Луганськ">Луганськ</option>
                                    <option value="Луцьк">Луцьк</option>
                                    <option value="Львів">Львів</option>
                                    <option value="Миколаїв">Миколаїв</option>
                                    <option value="Одеса">Одеса</option>
                                    <option value="Полтава">Полтава</option>
                                    <option value="Рівне">Рівне</option>
                                    <option value="Суми">Суми</option>
                                    <option value="Тернопіль">Тернопіль</option>
                                    <option value="Ужгород">Ужгород</option>
                                    <option value="Харків">Харків</option>
                                    <option value="Херсон">Херсон</option>
                                    <option value="Хмельницький">Хмельницький</option>
                                    <option value="Черкаси">Черкаси</option>
                                    <option value="Чернівці">Чернівці</option>
                                    <option value="Чернігів">Чернігів</option>
                                </select>
                        </div>

                        @*Ввід адреси*@
                        <div class="adressInputAddBlock">
                            <h2 class="adressInputAddTitle">Адреса</h2>
                                <input placeholder="Введіть адресу" type="text" asp-for="Address">
                        </div>
                    </div>

                </div>

            </div>

            @*Блок з вибором дати та часу*@

            <h2 class="dateAddBlockTitle">Дата та час видачі</h2>

            <div class="dateTimeAddBlock">

                @*Блок з вибором дати*@
                <div class="dateAddBlock">
                    <div class="itemsDateAddBlock">

                        <div class="startDateAddBlock">
                            <h2>Дата початку</h2>
                                <input asp-for="StartDateTime" type="date" id="datepicker" placeholder="Оберіть дату отримання">
                        </div>

                        <div class="endDateAddBlock">
                            <h2>Дата кінця</h2>
                            <input asp-for="FinishDateTime" type="date" id="datepicker"  placeholder="Оберіть дату отримання">
                        </div>

                        <div class="daysAddBlock">
                            <h2>Дні видачі</h2>

                            <div class="daysPick">
                                <span class="from">з</span>
                                <select class="daysStartSelectBlock">
                                    <option value="daysStart">Пн</option>
                                    <option value="daysStart">Вт</option>
                                    <option value="daysStart">Ср</option>
                                    <option value="daysStart">Чт</option>
                                    <option value="daysStart">Пт</option>
                                    <option value="daysStart">Сб</option>
                                    <option value="daysStart">Нд</option>
                                </select>

                               <span class="to">до</span>

                              <select class="daysEndSelectBlock">
                                    <option value="daysEnd">Пн</option>
                                    <option value="daysEnd">Вт</option>
                                    <option value="daysEnd">Ср</option>
                                    <option value="daysEnd">Чт</option>
                                    <option value="daysEnd">Пт</option>
                                    <option value="daysEnd">Сб</option>
                                    <option value="daysEnd">Нд</option>
                            </select>
                    </div>
                            </div>

                        </div>

                    </div>

                @*Блок з вибором часу*@
                <div class="timeAddBlock">

                    <h2>Час видачі</h2>

                    <div class="timePick">

                        <span class="from">з</span>

                        <select class="timeStartSelectBlock">
                                <option value="timeStart">09:00</option>
                                <option value="timeStart">09:30</option>
                                <option value="timeStart">10:00</option>
                                <option value="timeStart">10:30</option>
                                <option value="timeStart">11:00</option>
                                <option value="timeStart">11:30</option>
                                <option value="timeStart">12:00</option>
                                <option value="timeStart">12:30</option>
                                <option value="timeStart">13:00</option>
                                <option value="timeStart">13:30</option>
                                <option value="timeStart">14:00</option>
                                <option value="timeStart">14:30</option>
                                <option value="timeStart">15:00</option>
                                <option value="timeStart">15:30</option>
                                <option value="timeStart">16:00</option>
                                <option value="timeStart">16:30</option>
                                <option value="timeStart">17:00</option>
                                <option value="timeStart">17:30</option>
                                <option value="timeStart">18:00</option>
                                <option value="timeStart">18:30</option>
                                <option value="timeStart">19:00</option>
                                <option value="timeStart">19:30</option>
                                <option value="timeStart">20:00</option>
                            </select>

                        <span class="to">до</span>

                        <select class="timeEndSelectBlock">
                                <option value="timeEnd">09:00</option>
                                <option value="timeEnd">09:30</option>
                                <option value="timeEnd">10:00</option>
                                <option value="timeEnd">10:30</option>
                                <option value="timeEnd">11:00</option>
                                <option value="timeEnd">11:30</option>
                                <option value="timeEnd">12:00</option>
                                <option value="timeEnd">12:30</option>
                                <option value="timeEnd">13:00</option>
                                <option value="timeEnd">13:30</option>
                                <option value="timeEnd">14:00</option>
                                <option value="timeEnd">14:30</option>
                                <option value="timeEnd">15:00</option>
                                <option value="timeEnd">15:30</option>
                                <option value="timeEnd">16:00</option>
                                <option value="timeEnd">16:30</option>
                                <option value="timeEnd">17:00</option>
                                <option value="timeEnd">17:30</option>
                                <option value="timeEnd">18:00</option>
                                <option value="timeEnd">18:30</option>
                                <option value="timeEnd">19:00</option>
                                <option value="timeEnd">19:30</option>
                                <option value="timeEnd">20:00</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

        <div class="createAddBtn">
            <button class="crtAddBtn">Редагувати оголошення</button>  
            <form action="~/EditAdvert/Delete/@Model.Id" method="post">
                <button class="deleteAddBtn">Видалити оголошення</button>
            </form>
        </div>
</form>
            

         <div id="text-container" style="display: none;">
            <p>Зміни були успішно збережені</p>
        </div>

        <div id="popup" class="popup">
            <div class="popup-body">
                <div class="popup-content">
                    <a href="" class="popup-close">X</a>
                    <span class="popup-text">Бажаєте видалити оголошення?</span>
                    <div class="popup-btns">
                        <form action="~/OrganizationProfile/Index" method="post">
                            <button class="popup-btn">Так</button>
                        </form>
                        <form action="~/EditAdvert/Index" method="post">
                            <button class="popup-btn">Ні</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

</div>

<script src="~/js/editAdvertPicture.js"></script>