@{
    ViewData["Title"] = "ForgotPass Page";
}

<head>
    <link href="~/css/forgotPassStyle.css" rel="stylesheet" />
</head>

<div class="wrapper">
    <div class="content">
        <h1 class="forgotPassText">Забули пароль?</h1>
        <div class="regContainers">
            <div class="regEmail">
                <input placeholder="Електронна пошта"></input>
            </div>
            <div class="repeatEmail">
                <input placeholder="Повторіть електронну пошту"></input>
            </div>
        </div>
        <div class="autoButton">
            <button>Відновити</button> 
        </div>
    </div>

</div>