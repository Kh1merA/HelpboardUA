@model HelpBoardUA.Models.User
@{
    ViewData["Title"] = "Додати новину";
}

<head>
    <link href="~/css/addNewsStyle.css" rel="stylesheet" />
    <script src="~/js/addNewsButton.js"></script>
</head>

<div class="wrapper">

    <h1 class="pageTitle">Додати новину</h1>

    <div class="mainContainer">

        @*Блок додавання іконки*@

        <div class="addNewsImgBlock">
            <h2>Іконка новини:</h2>
            <div id="newsImgBlock">
                @*<img  src="~/img/step_it_eng_short 1.png" id = "news-icon"/>*@
            </div>
            <div class="downloadAnother">
                <input type="file" accept="image/jpeg, image/png, image/jpg, image/svg" id="upload-file"/>
                <button id="upload-btn">Завантажити</button>
                <img src="~/img/pencilAddNews.png" alt="pencilIcon"/>
                <span id="upload-text">Файл не завантажено</span>
            </div>
        </div>

        @*Блок бокової лінії*@

        <img src="~/img/addNewsLine.png" alt="newsIcon" class = "lineAddNewsImg"/>


        @*Блок додавання новини*@

        <div class="addNewsBlock">
            
            <div class="addNewsName">
                <h2 class="addNewsNameTitle">Назва</h2>
                <input placeholder="Введіть назву" type="text" value="">
            </div>

            <div class="addNewsUnderName">
                <h2 class="addNewsUnderNameTitle">Підназва:</h2>
                <textarea rows="4" cols="50"></textarea>
            </div>

            <div class="addNewsDescription">
                <h2 class="addNewsDescriptionTitle">Опис:</h2>
                <textarea rows="4" cols="50"></textarea>
            </div>

            <div class="addBannerSection">
                <h2>Баннер новини</h2>
                <div class="addBannerContent">
                        <div class = "addBannerBlock">
                            <img src="~/img/uploadImageEditProfile.svg" alt="downloadIcon" class = "downloadIconImg"/>
                            <p class = "formatsText">Підтримуваний формат JPG, JPEG, PNG, SVG</p>
                            <input type="file" id="upload-file2" hidden="hidden" accept="image/jpeg, image/png, image/jpg, image/svg"/>
                            <button id = "addBtn">Завантажити</button>
                            <span id="upload-text2">Файл не завантажено</span>
                    </div>
                    <div id="bannerBlock">
                        @*<img src="~/img/Банер новини 2.png" alt="downloadIcon" class = "bannerIcon"/>*@
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="addNewsBtnBlock">
        <form action="~/News/ArticlePage">
            <button class="addNewsBtn">Додати новину</button>
        </form>
    </div>
</div>

<script src="~/js/addNewsUploadImage.js"></script>


