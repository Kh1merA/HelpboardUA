@{
	ViewData["Title"] = "OnlineQueueRegistration";
}

<head>
	<link href="~/css/onlineQueueStyle.css" rel="stylesheet" />
</head>

<div class="wrapper">
	<h2 class="headline">Запис в онлайн-чергу для<br />отримання гуманітарної допомоги</h2>
	<div class="registration-container">
		<div class="dateOfRegistration">
		<input type="date" id="datepicker" name="datepicker" placeholder="Оберіть дату отримання">
		</div>
		<div class="timeOfRegistration">
			<select id="dropdown" name="dropdown">
				<option value="" disabled selected hidden>Оберіть час отримування</option>
				<option value="option1" class="rounded-option">09:00</option>
				<option value="option2" class="rounded-option">09:30</option>
				<option value="option3" class="rounded-option">10:00</option>
				<option value="option4" class="rounded-option">10:30</option>
				<option value="option5" class="rounded-option">11:00</option>
				<option value="option6" class="rounded-option">11:30</option>
				<option value="option7" class="rounded-option">12:00</option>
				<option value="option8" class="rounded-option">12:30</option>
				<option value="option9" class="rounded-option">14:00</option>
			</select>
		</div>
	</div>
	<div class="confirmButton">
		<a href="#">Зареєструватися</a>
	</div>
</div>
