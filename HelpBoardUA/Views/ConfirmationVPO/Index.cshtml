@{
	ViewData["Title"] = "Confirmation Requests";
}

<head>
	<link href="~/css/confirmationVPOStyle.css" rel="stylesheet" />
</head>


<script>
    function deleteUserBox(blockId) {
        var userBox = document.getElementById(blockId);
        userBox.style.opacity = '0';
        userBox.addEventListener('transitionend', function () {
            userBox.remove();
            animateRemainingBoxes();
        });

        function animateRemainingBoxes() {
            var userContainer = document.getElementById('userContainer');
            var userBoxes = userContainer.getElementsByClassName('userBox');
            var height = 0;
            var opacity = 1;

            for (var i = 0; i < userBoxes.length; i++) {
                var box = userBoxes[i];
                box.style.transform = 'translateY(' + height + 'px)';
                box.style.opacity = opacity;
                height += box.offsetHeight;
                opacity -= 0.1;
            }
        }
    }
</script>

<div class="wrapper">
    <h1 class="headline">Заявки на підтвердження статусу ВПО</h1>
    <div class="userContainer">
        <div class="userBox" id="block-1">
            <div class="userDetails">
                <div><i class="bi bi-person"></i></div>
                <div class="name">Соколов Максим Олегович</div>
                <div><a href="#popup"><i class="bi bi-image"></i></a></div>
            </div>
            <div class="buttonContainer">
                <div class="confirmButton">
                    <button class="confirm" onclick="deleteUserBox('block-1'); document.getElementById('block-1').classList.add('removing')">Підтвердити</button>
                </div>
                <div class="cancelButton">
                    <button class="cancel" onclick="deleteUserBox('block-1'); document.getElementById('block-1').classList.add('removing')">Відхилити</button>
                </div>
            </div>
        </div>
        <div class="userBox" id="block-2">
            <div class="userDetails">
                <div><i class="bi bi-person"></i></div>
                <div class="name">Лісунов Максим Олегович</div>
                <div><a href="#popup"><i class="bi bi-image"></i></a></div>
            </div>
            <div class="buttonContainer">
                <div class="confirmButton">
                    <button class="confirm" onclick="deleteUserBox('block-2'); document.getElementById('block-2').classList.add('removing')">Підтвердити</button>
                </div>
                <div class="cancelButton">
                    <button class="cancel" onclick="deleteUserBox('block-2'); document.getElementById('block-2').classList.add('removing')">Відхилити</button>
                </div>
            </div>
        </div>
    </div>
    <div id="popup" class="popup">
        <div class="popup-body">
            <div class="popup-content">
                <a href="" class="popup-close">X</a>
                <img src="~/img/dovidkaVPO.jpg" />
            </div>
        </div>
    </div>
</div>

